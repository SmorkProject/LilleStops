{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@features": ["./src/features"],
      "@features/*": ["./src/features/*"],
      "@constants": ["./src/constants"],
      "@constants/*": ["./src/constants/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"]
    }
  }
}